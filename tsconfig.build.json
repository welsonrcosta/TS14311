{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "noEmitOnError": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node"
  },
  "exclude": ["node_modules", "dist","build","**/*.test.*", "**/__mocks__/*", "**/__tests__/*"],
  "files": []
}
